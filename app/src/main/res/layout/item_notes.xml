<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#707070"
        android:layout_margin="10dp">
        <View
            android:id="@+id/viewPriority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:background="@drawable/red_dot">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:maxLines="1"
                android:text="@string/app_name"/>
            <TextView
                android:id="@+id/notesSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:textColor="#D8D8D8"
                android:textSize="15sp"
                android:text="morhjbbhj hdgndv lnh kjfdhbuykg bvdiolh fjdkniu hujff;ldnahbkkjlfniab,bj j n iuhfjkljviuankjdbjvm v kjkjdvas hkbjhavng hkjfd ljkdfkjkvb hjbjgahb vfja"/>
            <TextView
                android:id="@+id/notesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:text="15 October 2021"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>